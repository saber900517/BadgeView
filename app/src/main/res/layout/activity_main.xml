<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sunxiaodong.badgeview.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_1080p_27">

            <TextView
                android:id="@+id/add_button"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_margin="6dp"
                android:background="@drawable/drawable_ffcd34_cca000_1080p_12px_selector"
                android:gravity="center"
                android:text="增加数量"
                android:textColor="@color/color_333333"
                android:textSize="18sp" />

            <com.example.sunxiaodong.badgeview.BadgeView
                android:id="@+id/add_button_badge_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_1080p_27">

            <TextView
                android:id="@+id/decrease_button"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_margin="6dp"
                android:background="@drawable/drawable_ffcd34_cca000_1080p_12px_selector"
                android:gravity="center"
                android:text="减少数量"
                android:textColor="@color/color_333333"
                android:textSize="18sp" />

            <com.example.sunxiaodong.badgeview.BadgeView
                android:id="@+id/decrease_button_badge_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_1080p_27">

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:background="@drawable/drawable_ffcd34_cca000_1080p_12px_selector"
                android:gravity="center"
                android:text="显示无内容红点"
                android:textColor="@color/color_333333"
                android:textSize="18sp" />

            <com.example.sunxiaodong.badgeview.BadgeView
                android:id="@+id/no_count_badge_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right" />
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
